{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "salary": {
      "type": "number",
       "minimum": 1000
    }
  },
  "required": [
    "name",
    "email",
    "salary"
  ]
}
